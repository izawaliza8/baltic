{% set rich_links_grid = {
  "links": [
    {
      "title_html": "HIBISCUS PRIVATE<br/>DININNG ROOM",
      "assets": [
				{
					"image": "./images/ro-1.jpg",
					"alt": "Placeholder Image 1"
				},
				{
					"image": "./images/ro-2.jpg",
					"alt": "Placeholder Image 2"
				},
				{
					"image": "./images/ro-3.jpg",
					"alt": "Placeholder Image 3"
				}
			],
      "alt": "Placeholder Image 1",
      "text": "Cras mattis consectetur purus sit amet fermentum. Maecenas faucibus mollis interdum.",
      "link_label": "Read more",
      "link_url": "#"
    },
    {
      "title_html": "AUTUMN<br/>SAMPLE MENUS",
      "assets": [
				{
					"image": "./images/ro-1.jpg",
					"alt": "Placeholder Image 1"
				},
			],
      "alt": "Placeholder Image 2",
      "text": "Cras mattis consectetur purus sit amet fermentum. Maecenas faucibus mollis interdum.",
      "link_label": "Open popup",
			"link_popup": "#booking"
    }
  ]
} %}

<section class="rlg bg-{{bg_color}}">
	<div class="hor-line hor-line--dt grow">
	</div>
	<div class="container container--dt pt-dt-80 pb-dt-80">
		<ul class="rlg__grid unstyled-list">
			{% for link in rich_links_grid.links %}
				{% set even = loop.index is even %}
				<li class="rlg__item container container--mob pt-32 pb-32 pt-dt-20 pb-dt-0">
					<div class="rlg__item-inner
								{% if even %}
								  rlg__item-inner--even
								{% endif %}
								 ">
						<h2 class="rlg__title fs-26 lh-1-15 pb-20 reveal" aria-hidden="true">{{ link.title_html|raw }}</h2>
						<simple-carousel class="rlg__asset-wrapper reveal">
							{% for asset in link.assets %}
								{% if asset.video %}
									<video src="{{ asset.video }}" alt="{{ asset.alt }}" data-asset muted playsinline></video>
								{% else %}
									<img src="{{ asset.image }}" alt="{{ asset.alt }}" class="rlg__asset" data-asset>
								{% endif %}
							{% endfor %}
						</simple-carousel>
						<p class="rlg__text ff-mono lh-1-3 reveal">{{ link.text }}</p>
						{% if link.link_url %}
							<a href="{{ link.link_url }}" class="rlg__link link reveal">{{ link.link_label }}</a>
						{% elseif link.link_popup %}
							<popup-opener data-pop-id="{{link.link_popup}}">
								<button type="button" class="rlg__link link unstyled-button reveal">{{ link.link_label }}</button>
							</popup-opener>
						{% endif %}

					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
	<div class="hor-line hor-line--dt grow">
	</div>
</section>
