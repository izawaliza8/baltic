<div class="ct pt-20 pb-32 pt-dt-60 pb-dt-60 bg-maroon clr-white">
	<div class="ct__wrapper container grid-wrapper">
		<simple-carousel class="ct__asset reveal" data-delay="200">
			{% for asset in data.assets %}
				{% if asset.video %}
					<video src="{{ asset.video }}" alt="{{ asset.alt }}" data-asset muted playsinline></video>
				{% else %}
					<img src="{{ asset.image }}" alt="{{ asset.alt }}" data-asset>
				{% endif %}
			{% endfor %}
		</simple-carousel>
		<div class="ct__content pb-10 anim-trigger" data-delay="400">
