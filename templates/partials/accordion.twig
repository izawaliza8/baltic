<div class="accordion {{class}}">

	<div class="container container--dt accordion__inner grid-wrapper" >


		{% if data.assets is defined %}
			<simple-carousel class="accordion__assets reveal" data-delay="400">
				{% for asset in data.assets %}
					{% if asset.video %}
						<video src="{{ asset.video }}" alt="{{ asset.alt }}" data-asset muted playsinline></video>
					{% else %}
						<img src="{{ asset.image }}" alt="{{ asset.alt }}" data-asset>
					{% endif %}
				{% endfor %}
			</simple-carousel>
		{% endif %}

		{% if data.items is defined %}
			<div class="container container--mob accordion__wrapper grow-trigger reveal" data-delay="200">

				<acc-ordion data-first-open="1">
					<ul class="unstyled-list accordion__list acc">

						{% for item in data.items %}

							<button aria-controls="content-{{loop.index0}}" aria-expanded="false" id="accordion-control-{{loop.index0}}" data-button class="unstyled-button acc__button accordion__item-button fs-14 fs-dt-20">
								<span class="">{{item.title}}</span>
								<span class="acc__icon" data-icon>
									<svg width="18" height="18" viewbox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
										<circle cx="9" cy="9" r="8" stroke="black"/>
										<rect x="8.67969" y="2.91998" width="0.64" height="12.16" fill="black"/>
										<path fill-rule="evenodd" clip-rule="evenodd" d="M15.0801 8.68V9.32H2.92008V8.68H15.0801Z" fill="black"/>
									</svg>
								</span>
							</button>

							<div class="acc__item-content grid-wrapper-half" aria-hidden="true" id="content-{{loop.index0}}">

								<div class="acc__item-inner wysiwyg ff-mono fs-14 fs-dt-16 lh-1-3" data-inner>
									{{item.text_html}}
								</div>

							</div>

							<div class="hor-line grow-child"></div>

						{% endfor %}

					</ul>
				</acc-ordion>

			</div>
		{% endif %}


	</div>
</div>
