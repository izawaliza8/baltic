<section class="text-columns container container--dt">
  {% for item in data.items %}
    <div class="text-columns__item text-columns__item--{{item.columns|length}}  pb-40">
      <h2 class="text-columns__heading container container--mob pt-10 pb-20 pb-dt-30 fs-18 fh-1-1 fs-dt-25 lh-dt-1-2">
      Kinn Collective
      <br>
      – {{ item.heading }}
      </h2>

      {% if item.columns %}
        <div class="text-columns__columns">
          {% for column in item.columns %}
            <div class="text-columns__column">
              {% for item in column.items %}
                <div class="text-columns__link-item">


                  {% if item.url %}
                    <a href="{{ item.url }}" class="text-columns__link fs-14 lh-1-1 fs-dt-16 ff-mono">
                    <span>
                        {{ item.title }}
                    </span>
                    {% if item.footnote is defined and item.footnote %}
                    <span class="fs__star">
                      ❋
                    </span>
                    {% endif %} 

                    {% if item.rating is defined and item.rating %}
                      {% for i in 1..item.rating %}
