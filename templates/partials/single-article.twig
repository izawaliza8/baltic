{% set layout_class = data.flip ? 'twi--flip' : '' %}
{% set layout_class = data.flip_mobile ? layout_class ~ ' twi--flip-mobile' : layout_class %}

<div class="twi pt-20 pb-20 pt-dt-60 pb-dt-60 {{layout_class}} {{class}} anim-trigger">
	<div class="twi__wrapper container grid-wrapper">
		<div class="twi__content pb-10 reveal-child">
			<h2 class="twi__title fs-26 fs-dt-28">{{data.title}}</h2>
			<div class="twi__text fs-dt-20 wysiwyg">{{data.text_html}}</div>
			<a href="{{data.link.url}}" class="twi__link btn btn--medium">{{data.link.text}}</a>
		</div>
		<img src="{{data.image}}" alt="{{data.alt}}" class="twi__asset reveal-child"/>
	</div>
</div>
