<section class="pg">

	{% if heading is defined and heading is not empty %}
		<div class="container">
			<h2 class="pg__heading fs-16 lh-1-1 fs-dt-18 pb-20 pb-dt-30 pt-20 upper reveal">{{ heading }}</h2>
		</div>
	{% endif %}

