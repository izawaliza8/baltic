						{% if project.video %}
							<video src="{{ project.video }}" alt="{{ project.title }}" data-asset muted playsinline></video>
						{% else %}
							<img src="{{ project.image }}" alt="{{ project.title }}">
						{% endif %}
					</div>
					<div class="pg__item-content clr-white">
						<h3 class="pg__item-title fs-18 fs-dt-25 lh-1-2">
							{{ project.title }}
